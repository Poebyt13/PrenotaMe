<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/card_background"
    android:elevation="6dp">

    <!-- Immagine -->
    <ImageView
        android:id="@+id/imgEv"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:background="@drawable/card_top_radius" />


    <!-- Contenuto testo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Data -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/dataStEv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333"/>

            <TextView
                android:id="@+id/dataEnEv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textSize="14sp"
                android:textColor="#555"/>
        </LinearLayout>

        <!-- Titolo -->
        <TextView
            android:id="@+id/titleEv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="4dp"/>

        <!-- Location -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_location"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:id="@+id/locationEv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6c4fff"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Utente + Join -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <!-- Immagine utente a sinistra -->
            <ImageView
                android:id="@+id/userProfileImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@drawable/background_circle" />

            <!-- Spacer invisibile per spingere il bottone a destra -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- Bottone Join a destra -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join Event"
                android:id="@+id/joinButton"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
