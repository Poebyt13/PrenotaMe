<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AdminUpdateEventFragment"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/update_arrow_indietro"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_arrow_left" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Settings Event"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <!-- Form Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Title -->
                <TextView
                    style="@style/createEventTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title" />

                <EditText
                    android:id="@+id/update_event_titleField"
                    style="@style/createEventTitleField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="Event example name" />

                <!-- Description -->
                <TextView
                    style="@style/createEventDescriptionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description" />

                <EditText
                    android:id="@+id/update_event_descriptionField"
                    style="@style/createEventDescriptionField"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="top|start"
                    android:hint="Description example ..."
                    android:inputType="textMultiLine"
                    android:padding="16dp"
                    android:scrollbars="vertical" />

                <!-- Dates -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/dataStartTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date start" />

                        <EditText
                            android:id="@+id/dataInizio"
                            android:background="@drawable/background_shape_disabled"
                            android:padding="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="17/02/2025 10:00"
                            android:inputType="date"
                            android:focusable="false"
                            android:clickable="false"
                            android:enabled="false"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/dataEndTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date end" />

                        <EditText
                            android:id="@+id/dataFine"
                            android:background="@drawable/background_shape_disabled"
                            android:padding="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="17/02/2025 10:00"
                            android:inputType="datetime"
                            android:focusable="false"
                            android:clickable="false"
                            android:enabled="false"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Category and Seats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/categoryTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category" />

                        <Spinner
                            android:id="@+id/spinner"
                            style="@style/categoryField"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_shape_disabled"
                            android:padding="12dp"
                            android:enabled="false"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/seatsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seats" />

                        <EditText
                            android:id="@+id/updateSeatsNumber"
                            style="@style/seatsField"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="10"
                            android:inputType="number"
                            android:background="@drawable/background_shape_disabled"
                            android:focusable="false"
                            android:clickable="false"
                            android:enabled="false"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    style="@style/locationTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location" />

                <EditText
                    android:id="@+id/posizione"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="Milano"
                    android:background="@drawable/background_shape_disabled"
                    android:padding="12dp"
                    android:focusable="false"
                    android:clickable="false"
                    android:enabled="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Img URL"
                    style="@style/urlTitle" />

                <EditText
                    android:id="@+id/updateUrlImmagine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="https://...com"
                    style="@style/urlField" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/updateSubmitButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Submit" />
                    <Button
                        android:id="@+id/deleteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="Delete"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>